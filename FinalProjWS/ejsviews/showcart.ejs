<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <% include ./partials/header %>

        <title>Shopping Cart</title>
</head>

<body>
    <div class="jumbotron">
        <h1 class="display-4">Shopping Cart</h1>
        <a href="/" class= "btn btn-primary">Go to Store Front</a>


        <% if (sc.items.length == 0) { %>
            <h3>Empty Buy More</h3>
            <% } else { %>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Title</th>
                            <th scope="col">Qty</th>
                            <th scope="col">Unit Price</th>
                            <th scope="col">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const item of sc.items) { %>
                        <tr>
                            <td> <%= item.scloth.title %></td>
                            <td> <%= item.qty %></td>
                            <td align=Left> <%= utils.dollar.format(item.scloth.price) %></td>
                            <td align=Left> <%= utils.dollar.format(item.scloth.price * item.qty) %></td>
                        </tr>
                        <% } %>
                    </tbody>
                </table>
                Grand Total: <%= utils.dollar.format(sc.getTotal()) %>
                <% } %>
                
    </div>
</div>
            <% include ./partials/scripts %>
</body>

</html>